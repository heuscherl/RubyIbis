<!-- HTML page to create new forums.  -->

<div class="maintitle">
	<%= link_to 'Back', admin_categories_path %> 
</div>

<table border="0" cellspacing="1" cellpadding="0" class="fborder">
<tr>
<td class="maintitle">New Forum</td>
</tr>

<tr>
<td class="subforum">
</td>
</tr> 

<tr>
<td class="row1">

<%= form_for([:admin,@forum]) do |f| %>

    <%= f.label :name %><br>
    <%= f.text_field :name %><br>

    <%= f.label :description %><br>
    <%= f.text_area :description %><br>


  <%= f.label :category_id %><br />

  <%= f.select  :category_id, Category.all.map {|c| [c.name, c.id]}, 
  :prompt => "Select a Category"  %><br>

  
    <center><%= f.submit "Create Forum", class: "buttons" %></center>
  
<% end %>

</td>
</tr>
</table>

<%= link_to 'Back', admin_categories_path %>
