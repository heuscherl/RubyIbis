<!-- Showing the list of members.  -->

   <%= link_to 'New User', new_admin_user_path, :class => "buttons" %><br /><br />

<table width="100%" cellspacing="1" cellpadding="0" class="fborder">
   	<tr>
   		<td class="maintitle" colspan="5">Users</td>
   	</tr>
   	<tr>
   		<td class="subforum">Username</td>
   		<td class="subforum" width="25%">Joined</td>
   		<td class="subforum" width="25%">Last Online</td>
   		<td class="subforum" width="10%">Post Count</td>
   		<td class="subforum" width="10%">Options</td>
   	</tr>

  	<% @users.each do |user| %>
  		<tr>
  			<td class="row1">  
  				<%= link_to user.name, admin_user_path(user) %> 
  			</td>
  			<td class="row1">
  				<%= user.created_at %>
  			</td>
  			<td class="row1">
  				<%= user.updated_at %>
  			</td>
  			<td class="row1" align="center">
  				<%= user.posts.count%>
  			</td>
  			<td class="row1">
  				<%= link_to 'Edit', edit_admin_user_path(user) %> 
            	<%= link_to '| Delete', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %>
  		</tr>
  	<% end %>

</table>
