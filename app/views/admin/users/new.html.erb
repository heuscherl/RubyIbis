<% provide(:title, 'Sign up') %>
<!-- Registering a user.  -->
<div class="maintitle">
	<%= link_to 'Back', admin_users_path %> 
</div>
<Br />

<table border="0" cellspacing="1" cellpadding="0" class="fborder">
<tr>
<td class="maintitle">Register An Account</td>
</tr>

<tr>
<td class="subforum">
</td>
</tr> 

<tr>
<td class="row1">

  	<%= render 'shared/error_messages' %>
	    <%= form_for([:admin,@user]) do |f| %>

	      <%= f.label :name %><br>
	      <%= f.text_field :name %><br>

	      <%= f.label :email %><br>
	      <%= f.text_field :email %><br>

	      <%= f.label :password %><br>
	      <%= f.password_field :password %><br>

	      <%= f.label :password_confirmation, "Confirmation" %><br>
	      <%= f.password_field :password_confirmation %><br>

	      <%= f.submit "Create Account", class: "buttons" %>
    <% end %>

</td>
</tr>
</table>