<!-- If you click one of the categories, it lists the forums in that category and you can edit it.  -->
<p id="notice"><%= notice %></p>

<div class="maintitle">
	<%= link_to 'Back', admin_categories_path %> | 
  <%= link_to 'Edit', edit_admin_category_path %>  
</div>

<Br />


<table width="100%" cellspacing="1" cellpadding="0" class="fborder">
	<tr>
    <td class="maintitle" colspan="3">
 		 Forums in <%= @category.name %>
 		</td>
 	</tr>
  <tr>
    <td class="subforum"> Forum </td>
    <td class="subforum" width="10%"> Order </td>
    <td class="subforum" width="20%" align="center"> Options </td>
  </tr>

    <% @category.forums.each do |forum| %>
        <tr>
          <td class="row1">
            <%= link_to forum.name, admin_forum_path(forum) %>  <br>
            <%= forum.description %>      
          </td>
          <td class="row1">    
   			    order
          </td>
          <td class="row1" align="center">    
                <%= link_to "(Edit | ", edit_admin_forum_path(forum) %> 
                <%= link_to "Destroy)", admin_forum_path(forum), :confirm => 'Are you sure?', :method => :delete %>
          </td>
        </tr>
    <%end%>
</table>
